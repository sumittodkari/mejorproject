<% layout("/layouts/boilarplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8  offset-2">

       
    <h3>Edit your Listings</h3>
    <form method="POST" action ="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-lable">title</label>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
            <div class="valid-feedback">
                title looks nice
            </div>
        </div>
       
         
        <div class="mb-3">
            <label for="Description" class="form-lable"> description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%> </textarea>
            <div class="invalid-feedback">
                please enter a short description
            </div>
        </div>
        
        <div class="mb-3">
            <label for="image"  class="form-lable"> image</label>
            <input  type="text" name="listing[image]" value="<%=listing.image.url%>" class="form-control" required>
             <div class="invalid-feedback">
                please enter valid image
            </div>
        </div>
         
      <div class="row">
        <div class="mb-3 col-md-3">
            <label for="price"  class="form-lable"> price</label>
            <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
             <div class="invalid-feedback">
              please  enter a valid price 
             </div>
        </div>
            
        <div class="mb-3 col-md-9">
            <label for="country"  class="form-lable"> country</label>
            <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
             <div class="invalid-feedback">
                please enter valid country
             </div>
        </div>
      </div>
                
        <div class="mb-3">
            <label for="location"  class="form-lable"> location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
             <div class="invalid-feedback">
                please enter a valid location
             </div>
        </div>
            
        <button class="btn btn-dark edit-btn mt-3">edit</button>


    </form>
</div>

</div>

</body>
</html>